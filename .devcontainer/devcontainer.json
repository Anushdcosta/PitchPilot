{
  "name": "Startup Generator Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Backend API",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    },
    "5173": {
      "label": "Frontend Dev Server",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    },
    "5001": {
      "label": "Other Server (optional)",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  "forwardPorts": [3000, 5173, 5001],
  "hostRequirements": {
    "cpus": 4
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "postCreateCommand": [
    "rm -rf node_modules package-lock.json",
    "cd frontend && rm -rf node_modules package-lock.json",
    "cd frontend && npm install react react-dom react-router-dom lucide-react vite",
    "echo GITHUB_TOKEN=Your github token here \\(instructions in Readme file\\) > .env",
    "echo VITE_API_BASE=https://${CODESPACE_NAME}-3000.app.github.dev > frontend/.env"
  ]
}
