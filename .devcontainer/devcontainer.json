{
  "name": "Startup Generator Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "npm install && cd frontend && npm install && cd .. && pip install diffusers accelerate transformers flask",
  "forwardPorts": [3000, 5173],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "hostRequirements": {
    "cpus": 4
  }
}
